<% provide(:title, "Home") %>
<h1>Welcome <%= current_user.name %></h1>


<body>

<div class="row">

  <div class="col-md-8">
    <h3>Reviews</h3>
    <% if @review_items.any? %>
        <% @review_items.each do |review| %>
            <div>
              <% if review.submitted %>
                  <%= link_to review.name , review %>
              <% else %>
                  <%= link_to review.name , edit_review_path(review)  %>
              <% end %>
            </div>

        <% end %>
    <% else %>
        <div class="center jumbotron">
          <h1>No reviews yet!</h1>
        </div>

    <% end %>
    <div >
    <a href="reviews/new" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add Review</a>
    </div>
  </div>

</div>


</body>