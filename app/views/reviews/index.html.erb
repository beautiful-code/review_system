<% provide(:title, "Home") %>
<h1>Welcome <%= current_user.name %></h1>


<body>

<div class="row">
    <aside class="col-md-6">
    <h3>Reviews</h3>
    <% if @review_items.any? %>
        <% @review_items.each do |review| %>
            <div>
              <% if review.submitted %>
                  <%= link_to review.name , review %>
              <% else %>
                  <%= link_to review.name , edit_review_path(review)  %>
              <% end %>
            </div>

        <% end %>
    <% else %>
        <div class="center jumbotron">
          <h1>No reviews yet!</h1>
        </div>

    <% end %>
    <div >
    <a href="reviews/new" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add Review</a>
    </div>


    </aside>

  <% if @current_user.manager &&  @users.any?%>

      <div class="col-md-4">
        <h3>Team Members</h3>

        <% @users.each do |user| %>
            <div>
              <%= link_to user.name , "" %>
            </div>

        <% end %>
      </div>


  <% end %>

</div>



</body>