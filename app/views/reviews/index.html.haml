%body
  - provide(:title, "Home")
  %h1
    Welcome
    \#{current_user.name}
  - if @review_items.any?
    .table-responsive
      %table.table.table-bordered.table-striped.table-highlight
        %thead
          %th.centered Appraisal Cycle
          %th.centered Status
          %th.centered Action
        %tbody
          - @review_items.each do |review|
            %tr.centered
              %td.col-md-3
                %label{:for => "sel1"}= review.name
              %td.col-md-5
                %label{:for => "sel1"}= review.mode
              %td.col-md-3
                - if review.saved?
                  = link_to 'view' , edit_review_path(review)
                - else
                  = link_to 'view', review
  - else
    .center.jumbotron
      %h1 No reviews yet!
