- provide(:title, "Add")
%h1= @review.name
.table-responsive
  %table.table.table-bordered.table-striped.table-highlight
    %thead
      %th.centered S.No
      %th.centered Goal
      %th.centered Weightage(%)
    %tbody
      - i=1
      - @goal_items.each do |goal|
        %tr.centered
          %td.col-md-2
            %label{:for => "sel1"}= i
          %td.col-md-6
            %label{:for => "sel1"}= goal.description
          %td.col-md-3
            %label{:for => "sel1"}= goal.weightage
          - i = i+1
  - if !@review.accepted? && current_user.id != @review.user_id
    = form_tag(approve_goals_by_team_lead_path, method: :put)  do
      .centered
        = submit_tag 'Approve', class: "btn btn-primary", name: "edit[#{@review.id}]"
        = submit_tag 'Reject', class: "btn btn-primary", name: "edit[#{@review.id}]"
